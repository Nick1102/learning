#!/bin/bash
SESSION=`basename default`

tmux -2 new-session -d -s $SESSION

tmux rename-window -t $SESSION:0 vim 
tmux split-window -v
tmux select-pane -t 0 
tmux resize-pane -D 10

tmux new-window -t $SESSION -a -n wiki 'vim'
tmux send-keys -t left '\ww' C-m
tmux new-window -t $SESSION -a -n docker
tmux split-window -h
tmux select-pane -t 1
tmux send-keys 'docker events' C-m
tmux split-window -v
tmux send-keys 'docker stats' C-m
tmux split-window -v
tmux send-keys 'socat -d TCP-LISTEN:2375,range=127.0.0.1/32,reuseaddr,fork UNIX:/var/run/docker.sock' C-m

tmux select-window -t $SESSION:0
tmux -2 attach-session -t $SESSION
